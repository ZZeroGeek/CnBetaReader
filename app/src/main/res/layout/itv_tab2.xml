<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_type1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="类型为："
        android:textSize="18sp"
        android:textColor="@color/green"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:background="@color/gray"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <RelativeLayout
            android:background="@color/white"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_margin="10dp" android:id="@+id/relativeLayout">


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image2"
                        android:src="@drawable/circularbtn"
                        android:layout_marginTop="8dp"
                        android:layout_height="50dp"
                        android:layout_width="65dp"
                        />

                    <TextView
                        android:id="@+id/itv_context2"

                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="18dp"
                        android:textColor="@color/blue"
                        android:text="德玛西亚！！！！！诺克萨斯!!!"
                        android:layout_toRightOf="@+id/image"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="72dp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:lines="1"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:id="@+id/firstword_text2"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:text="德"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:layout_gravity="left|center"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="20dp"
                        />

                </FrameLayout>

                <Button
                    android:id="@+id/ibtn_theme"
                    android:layout_height="40dp"
                    android:layout_width="72dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="关注"
                    android:layout_gravity="right|center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
