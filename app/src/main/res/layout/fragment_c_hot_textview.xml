<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:background="@color/gray"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_margin="10dp">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/layout">

            <FrameLayout
                android:layout_alignParentTop="true"
                android:id="@+id/Feame"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:padding="1dp"
                    android:id="@+id/img"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_btn"
                    android:layout_height="45dp"
                    android:layout_width="45dp" />

                <TextView
                    android:background="@android:color/transparent"
                    android:id="@+id/firstWord_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="上"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </FrameLayout>

            <TextView
                android:textSize="16sp"
                android:textColor="#0D181F"
                android:layout_alignParentTop="true"

                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/hot_comment_title"
                android:layout_alignBottom="@+id/Feame"
                android:layout_alignTop="@+id/Feame"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_toRightOf="@+id/Feame"
                android:layout_marginLeft="1dp"
                android:text="上大大师傅了门djfkldjf地方就考虑到口死定放假了三等奖飞洛實打實大大大大杉矶的福建省地方叫对方将冯绍峰"/>

        </LinearLayout>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="匿名用户 "/>
        <TextView

            android:id="@+id/hot_comment_news_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="评论于 kah的速度aliesndjjdkkdfjkdl"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>