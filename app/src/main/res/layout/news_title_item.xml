<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Windows 10应用商店中国定制版现身 系统界面曝光"/>
    <TextView
        android:id="@+id/news_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_title"
        android:text="2015-07-24 10:30:38"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/news_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="3"
        android:text="7月24日消息，昨日有网友在国内某知名论坛发布疑似Win10应用商店中国定制版的系统界面图片，一时间引发诸多热议。这名网友发帖称是从内部人士手里拿到了Win10特别版的系统映像，安装后发现这竟然是Win10针对中国地区的定制版本。系统中除内置了很多微软旗下的服务外，还有一些本地化的功能。据此他猜测，这极有可能就是专门提供给中国盗版用户免费使用的定制版本。"
        android:textSize="12sp"
        android:layout_below="@+id/news_publish_time"
        android:layout_toLeftOf="@+id/news_picture"
        android:layout_toStartOf="@+id/news_picture" />
    <ImageView
        android:id="@+id/news_picture"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:scaleType="fitStart"
        android:src="@mipmap/news_picture"
        android:layout_alignTop="@+id/news_summary"
        android:layout_alignRight="@+id/news_title"
        android:layout_alignEnd="@+id/news_title" />



    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="70dp"
        android:layout_height="15dp"
        android:gravity="center_vertical"
        android:layout_alignRight="@+id/news_picture"
        android:layout_above="@+id/news_picture">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/list_comment"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/news_comment_number"
            android:layout_toStartOf="@+id/news_comment_number" />
        <TextView
            android:id="@+id/news_comment_number"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:text="10"
            android:textSize="9sp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView8"
            android:layout_toStartOf="@+id/imageView8" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/list_eye"
            android:id="@+id/imageView8"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/news_reader_number"
            android:layout_toStartOf="@+id/news_reader_number" />
        <TextView
            android:id="@+id/news_reader_number"
            android:layout_width="25dp"
            android:layout_height="10dp"
            android:text="3022"
            android:textSize="9sp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
