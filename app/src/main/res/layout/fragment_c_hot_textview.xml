<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_margin="10dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/layout">

            <TextView
                android:background="@drawable/circle_shape"
                android:id="@+id/firstWord_text"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="上"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/hot_comment_title"
                android:textSize="16sp"
                android:textColor="#0D181F"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_marginLeft="5dp"
                android:text="上大大师傅了门djfkldjf地方就考虑到口死定放假了三等奖飞洛"/>

        </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="匿名用户 "/>
        <TextView

            android:id="@+id/hot_comment_news_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="评论于 kah的速度aliesndjjdkkdfjkdl"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</LinearLayout>